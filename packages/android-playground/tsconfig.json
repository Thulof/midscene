{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "dist/esm"
  },
  "exclude": ["**/node_modules"],
  "include": ["src"]
}
